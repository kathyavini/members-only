<!DOCTYPE html>
<html>
  <%- include('head') %>
  <body>
    <% if (user) { %>
    <h2>Become a member</h2>
    <h3>
      To become a member you need to have received a secret membership key from
      the site administrator.
    </h3>

    <% if (locals.errors) { %>
      <% errors.forEach(function (error) { %>
          <p class="validation-messages">
              <%= error.msg %>
          </p>
      <% }); %>
    <% }; %>

    <form method="POST" action="">
      <label for="memberKey">Enter Membership Key: </label>
      <input
        type="password"
        name="memberKey" placeholder="Member Key" value="<%= locals.keys ? keys.member : '' %>"
      />

      <p>To optionally gain admin priviledges, enter your admin key here:</p>
      <label for="adminKey">Enter Admin Key:</label>
      <input
        type="password"
        name="adminKey"
        placeholder="Admin Key"
        value="<%= locals.keys ? keys.admin : '' %>"
      />

      <button>Become a member</button>
    </form>

    <% } else { %>
      <h3>You must already have an account and be logged in to become a clubhouse member.</h3>
      <nav>
        <a href="/sign-up">Sign up</a>
        <a href="/log-in">Log in</a>
      </nav>
    <% } %>
  </body>
</html>
